{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["coverage", "dist", "docs", "node_modules"]
}
